BIN_DIR=$(cd $(dirname $0); pwd)
ROOT_DIR=$(dirname $BIN_DIR)
BUILD_DIR=$1
CACHE_DIR=$2
DEPS_DIR=$3
INDEX_DIR=$4

source $BIN_DIR/staging-util.sh

topic "starting multi-buildpack"
# put code in <deps>/<index>

topic "Configuring multi buildpack configuration"
cp $ROOT_DIR/lib/config.yml $DEPS_DIR/$INDEX_DIR/config.yml
APPLICATION_NAME=`echo $VCAP_APPLICATION | jq  .application_name -r`
sed -i "s/__PINPOINT.APP_NAME__/$APPLICATION_NAME/g" $DEPS_DIR/$INDEX_DIR/config.yml
cat $DEPS_DIR/$INDEX_DIR/config.yml

[ -z $PINPOINT_AGENT_ZIP_DOWNLOAD_URL ] || echo "PINPOINT_AGENT_ZIP_DOWNLOAD_URL empty"

if [[ -v $PINPOINT_AGENT_ZIP_DOWNLOAD_URL ]]; then
echo "PINPOINT_AGENT_ZIP_DOWNLOAD_URL:$PINPOINT_AGENT_ZIP_DOWNLOAD_URL"
else
echo "default PINPOINT_AGENT_ZIP_DOWNLOAD_URL"
PINPOINT_AGENT_ZIP_DOWNLOAD_URL="https://github.com/myminseok/pinpoint_agent_repo/blob/master/pinpoint-agent-1.7.4-SNAPSHOT.zip?raw=true" 
fi



mkdir -p $DEPS_DIR/$INDEX_DIR/pinpoint
cd $DEPS_DIR/$INDEX_DIR/pinpoint
topic "Downloading pinpoint agent binaries from $PINPOINT_AGENT_ZIP_DOWNLOAD_URL"
wget -q $PINPOINT_AGENT_ZIP_DOWNLOAD_URL -O pinpoint-agent.zip > /dev/null 2>&1
ls -alh pinpoint-agent.zip
unzip pinpoint-agent.zip > /dev/null 2>&1
rm -rf pinpoint-agent.zip

if [[ -z "${PINPOINT_CONFIG_URL}" ]]; then
topic "Pinpoint will use pinpoint.config included in $PINPOINT_AGENT_ZIP_DOWNLOAD_URL"
else
rm -rf pinpoint.config
topic "Downloading pinpoint.config from $PINPOINT_CONFIG_URL"
## "https://raw.githubusercontent.com/myminseok/pinpoint_agent_repo/master/pinpoint.config" 
wget -q $PINPOINT_CONFIG_URL
fi

topic "Configuring multi buildpack Completed" 
